<div class="edit">
  <h1>Update your profile</h1>
  <div>
    <div>
      <%= form_for :user, url: user_path(id: current_user.id), html: { method: 'put' } do |f| %>
          <%= f.text_field :firstname, class: 'form-control', placeholder: 'Name' %> <br>
          <%= f.text_field :lastname, class: 'form-control', placeholder: 'Surname'  %> <br>
          <%= f.text_field :email, class: 'form-control', placeholder: 'Email'  %> <br>
          <%= f.submit "Save changes", class: "btn btn-primary" %>
      <% end %> <br>
      <%= link_to "Go back", '/profile' %>
    </div>
  </div>
</div>
