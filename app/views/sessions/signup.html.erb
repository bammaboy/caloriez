<div class="sign-up">
  <h1>New profile</h1>
  <%= form_for :user, url: '/users' do |f| %>
      <%= f.text_field :firstname, class: 'form-control', placeholder: 'Name' %> <br>
      <%= f.text_field :lastname, class: 'form-control', placeholder: 'Surame'  %> <br>
      <%= f.text_field :email, class: 'form-control', placeholder: 'Email'  %> <br>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Password'  %> <br>
      <%= f.text_field :current_weight, class: 'form-control', placeholder: 'Weight, kg.' %><br>
      <%= f.text_field :goal_weight, class: 'form-control', placeholder: 'Goal weight, kg.' %><br>
      <%= f.submit "Registration", class: 'btn btn-success' %>
  <% end %>
</div>