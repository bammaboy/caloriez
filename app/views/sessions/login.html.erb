<div class="login">
  <h1>Login</h1>
      <%= form_tag '/login' do %>
         <%= text_field_tag :email, "", autofocus: true, id: 'login-form', class: 'form-control', placeholder: "Email" %> <br>
         <%= password_field_tag :password, "", id: 'login-form', class: 'form-control', placeholder: "Your password" %> <br>
          <%= submit_tag "Log in", id: 'login-form', class: 'btn btn-success' %>
      <% end %>
</div>
